  <%= @cocktail.name %>
  <ul>
    <% @cocktail.doses.each do |dose| %>
    <li><%= dose.ingredient.name %> | <%= dose.description %> <%=
    link_to "Delete a dose", delete_doses_path(dose), method: :delete %></li>
   <% end %>
  </ul>

